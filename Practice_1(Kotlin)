fun main() {
    // 1. Информация о типах данных
    println("=== Типы данных в Kotlin ===")
    println("1. Целочисленные типы:")
    println("   - Byte: 8-битное целое число (от -128 до 127)")
    println("   - Short: 16-битное целое число (от -32,768 до 32,767)")
    println("   - Int: 32-битное целое число (от -2,147,483,648 до 2,147,483,647)")
    println("   - Long: 64-битное целое число (от -9,223,372,036,854,775,808 до 9,223,372,036,854,775,807)")
    println("2. Числовые типы с плавающей точкой:")
    println("   - Float: 32-битное число с плавающей точкой")
    println("   - Double: 64-битное число с плавающей точкой")
    println("3. Строки:")
    println("   - String: последовательность символов")
    println("4. Логические типы:")
    println("   - Boolean: true или false")
    println("5. Другие типы:")
    println("   - Char: одиночный символ")
    println("   - Array: массивы")
    println("   - List: списки")
    println("   - Set: множества")
    println("   - Map: ассоциативные массивы (словари)")
    println("=============================")

    // 2. Вывод числа с точностью до сотых
    val number1 = 123.45678
    println("2. Число с точностью до сотых: %.2f".format(number1))

    // 3. Вывод числа e с точностью до десятых
    val e = Math.E
    println("3. Число e с точностью до десятых: %.1f".format(e))

    // 4. Ввод числа с клавиатуры и вывод с сообщением
    print("4. Введите число: ")
    val inputNumber1 = readLine()?.toDoubleOrNull()
    if (inputNumber1 != null) {
        println("Вы ввели число: $inputNumber1")
    } else {
        println("Ошибка: введено не число.")
    }

    // 5. Ввод числа с клавиатуры и вывод с сообщением
    print("5. Введите число: ")
    val inputNumber2 = readLine()?.toDoubleOrNull()
    if (inputNumber2 != null) {
        println("$inputNumber2 — вот какое число Вы ввели")
    } else {
        println("Ошибка: введено не число.")
    }

    // 6. Вывод чисел 1, 13 и 49 с одним пробелом между ними
    println("6. Числа: 1 13 49")

    // 7. Вывод чисел 7, 15 и 100 с двумя пробелами между ними
    println("7. Числа: 7  15  100")

    // 8. Вывод трех любых чисел с двумя пробелами между ними
    println("8. Числа: 3  14  27")

    // 9. Вывод четырех любых чисел с одним пробелом между ними
    println("9. Числа: 5 10 15 20")

    // 10. Вывод чисел 50 и 10 одно под другим
    println("10. Числа:")
    println("50")
    println("10")

    // 11. Вывод чисел 5, 10 и 21 одно под другим
    println("11. Числа:")
    println("5")
    println("10")
    println("21")

    // 12. Вывод "столбиком" четырех любых чисел
    println("12. Числа:")
    println("8")
    println("16")
    println("32")
    println("64")
}
